<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign visiting_positions = data.visiting_positions | sort: 'startDate' | reverse %}
  {% for position in visiting_positions %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if position.startDate %}
            {% assign startDate = position.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = position.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date = startDate | append: ' - ' | append: endDate %}
            <table class="table-cv">
              <tbody>
                <tr>
                  <td>
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                  </td>
                </tr>
                {% if position.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ position.location }}
                    </p>
                  </td>
                </tr>
                {% endif %}
              </tbody>
            </table>
          {% endif %}
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ position.url }}">{{ position.studyType }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ position.institution }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ position.area }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
